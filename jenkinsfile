pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Init') {
            steps {
                dir('App-server') {
                    sh 'sudo terraform init'
                    sh 'echo ${DO_API_TOKEN}'
                }
            }
        }
        stage('Plan') {
            steps {
                dir('App-server') {
                    withEnv(["DO_TOKEN=${env.DO_API_TOKEN}"]) {
                        sh 'sudo terraform plan -var "do_token=$DO_TOKEN"'
}                }
            }
        }

        stage('Apply') {
            steps {
                dir('App-server') {
                    sh '''
  DO_TOKEN_VALUE=$(echo ${DO_API_TOKEN})
  sudo terraform apply -auto-approve -var "do_token=$DO_TOKEN_VALUE"
'''
                }
            }
        }

        
    }
}