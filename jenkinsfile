pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
            stages {
        stage('Print DO_API_TOKEN') {
            steps {
                echo "DO_API_TOKEN: ${env.DO_API_TOKEN}"
            }
        }
        stage('Init') {
            steps {
                dir('App-server') {
                    sh 'sudo terraform init'
                }
            }
        }
        stage('Plan') {
            steps {
                dir('App-server') {
                    sh "sudo terraform plan -var 'do_token=${env.DO_API_TOKEN}'"
                }
            }
        }

        stage('Apply') {
            steps {
                dir('App-server') {
                    sh "sudo terraform apply -auto-approve -var 'do_token=${env.DO_API_TOKEN}'"
                }
            }
        }

        
    }
}