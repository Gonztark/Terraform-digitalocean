pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Init') {
            steps {
                dir('App-server') {
                    sh 'sudo -A terraform init'
                }
            }
        }
        stage('Plan') {
            steps {
                dir('App-server') {
                    sh 'sudo -A terraform plan'
                }
            }
        }
    }
}