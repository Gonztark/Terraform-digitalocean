pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Init') {
            steps {
                dir('App-server') {
                    sh 'sudo terraform init'
                }
            }
        }
        stage('Plan') {
            steps {
                dir('App-server') {
                    sh "sudo terraform plan -var 'do_token=${env.DO_API_TOKEN}'"
                }
            }
        }
    }
}